{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": ".",
    "paths": {
      "amplify:data": ["amplify/types/data.ts"],
      "amplify:storage": ["amplify/types/storage.ts"]
    },
    "typeRoots": ["./node_modules/@types", "./amplify/types"]
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}

